<style>
  /* Login Page - Contact Page Style */
  .login-section {
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    min-height: 80vh;
    padding: 40px 0;
  }

  .login-card {
    background: linear-gradient(135deg, #fff 0%, #fefefe 100%);
    border: 2px solid #e0bf50;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 8px 25px rgba(224, 191, 80, 0.1);
    transition: transform 0.3s ease;
    width: 100%;
    min-width: 320px;
    max-width: 500px;
  }

  .login-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(224, 191, 80, 0.15);
  }

  .form-label {
    font-weight: 600;
    color: #2c2c2c;
    margin-bottom: 0.5rem;
  }

  .form-control {
    border: 2px solid #e9ecef;
    border-radius: 8px;
    padding: 0.75rem 1rem;
    transition: all 0.3s ease;
    font-size: 1rem;
  }

  .form-control:focus {
    border-color: #e0bf50;
    box-shadow: 0 0 0 0.2rem rgba(224, 191, 80, 0.25);
  }

  .btn-login {
    background: linear-gradient(135deg, #e0bf50, #ffc107);
    border: none;
    color: #000;
    font-weight: 600;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    width: 100%;
  }

  .btn-login:hover {
    background: linear-gradient(135deg, #ffc107, #ffed4e);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(224, 191, 80, 0.3);
    color: #000;
  }

  .back-button {
    margin-bottom: 20px;
  }

  .login-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .login-header h2 {
    color: #2c2c2c;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .login-header p {
    color: #6c757d;
    margin: 0;
  }

  .info {
    font-size: 0.9rem;
    color: #6c757d;
  }

  @media (max-width: 576px) {
    .login-card {
      max-width: 90%;
      padding: 1.5rem;
    }
  }
</style>

<!-- Back button -->
<a type="button" class="btn btn-outline-warning back-button" href="/products">
  <i class="fa-solid fa-arrow-left"></i>
</a>

<section class="login-section">
  <div class="container d-flex justify-content-center align-items-center">
    <!-- Card -->
    <div class="login-card">
      <%- include('../partials/messages') %>

      <div class="login-header">
        <h2>Login to Royal Jewels</h2>
        <p>Welcome back! Please sign in to your account.</p>
      </div>

    <form action="/products/login" method="POST">
      <div class="form-group mb-3">
        <label for="email">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          aria-describedby="emailHelp"
          placeholder="Enter your email"
          required
          value="kesarchand123@gmail.com"
        >
        <small id="emailHelp" class="form-text text-muted">
          We'll never share your email with anyone else.
        </small>
      </div>

      <div class="form-group mb-3">
        <label for="password">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Enter your password"
          required
        >
      </div>

      <div class="form-group form-check mb-3">
        <input type="checkbox" class="form-check-input" id="rememberMe">
        <label class="form-check-label" for="rememberMe">Remember me</label>
      </div>

      <button type="submit" class="btn btn-login">
        <i class="fas fa-sign-in-alt me-2"></i>
        Login
      </button>
    </form>

    <p class="text-center mt-3 mb-0 small info">
      Only the admin can register new accounts. If you're not registered, please contact the site owner.
    </p>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
