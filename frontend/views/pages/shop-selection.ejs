<style>
  :root {
    --gold: #DAA520;
    --silver: #C0C0C0;
    --dark: #1a1a1a;
    --light: #f8f9fa;
  }

  .shop-selection-container {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 249, 250, 0.9) 100%);
    backdrop-filter: blur(10px);
    border: 2px solid var(--gold);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3), 0 0 100px rgba(218, 165, 32, 0.1);
    position: relative;
  }

  .shop-selection-container::before {
    content: '';
    position: absolute;
    top: -2px; left: -2px; right: -2px; bottom: -2px;
    background: linear-gradient(45deg, var(--gold), var(--silver), var(--gold));
    border-radius: 20px;
    z-index: -1;
    animation: shimmer 3s infinite;
  }

  @keyframes shimmer { 0%, 100% { opacity: 0.7; } 50% { opacity: 1; } }

  .crown-icon { color: var(--gold); filter: drop-shadow(0 0 20px rgba(218, 165, 32, 0.5)); animation: glow 2s infinite alternate; }
  @keyframes glow { from { filter: drop-shadow(0 0 20px rgba(218, 165, 32, 0.5)); } to { filter: drop-shadow(0 0 30px rgba(218, 165, 32, 0.8)); } }

  .shop-btn {
    background: linear-gradient(135deg, var(--gold) 0%, #ffed4e 100%);
    border: 2px solid var(--gold);
    color: var(--dark);
    font-weight: 600;
    border-radius: 15px;
    transition: all 0.4s cubic-bezier(0.4,0,0.2,1);
    position: relative; overflow: hidden;
    box-shadow: 0 8px 25px rgba(218,165,32,0.3);
    min-width: 200px; padding: 18px 30px;
  }
  .shop-btn::before {
    content: '';
    position: absolute;
    top:0; left:-100%;
    width:100%; height:100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.6s;
  }
  .shop-btn:hover::before { left:100%; }
  .shop-btn:hover { transform: translateY(-5px); box-shadow:0 15px 40px rgba(218,165,32,0.4); border-color: var(--gold); color: var(--dark); }
  .shop-btn.shop-premium { background: linear-gradient(135deg, var(--silver)0%,#e6e6e6 100%); border-color: var(--silver); box-shadow:0 8px 25px rgba(192,192,192,0.3); }
  .shop-btn.shop-premium:hover { box-shadow:0 15px 40px rgba(192,192,192,0.4); border-color: var(--silver); color: var(--dark); }

  .shop-label { font-size:0.85rem; font-weight:300; opacity:0.8; font-style:italic; }

  .fade-in { animation: fadeInUp 0.8s cubic-bezier(0.4,0,0.2,1) both; }
  .fade-in-delayed { animation: fadeInUp 0.8s cubic-bezier(0.4,0,0.2,1) 0.3s both; }
  @keyframes fadeInUp { from { opacity:0; transform:translateY(30px);} to { opacity:1; transform:translateY(0);} }

  .divider { height:2px; background: linear-gradient(90deg,transparent,var(--gold),transparent); border:none; }
</style>

