      font-size: 1rem;
      text-align: left;
    }
    
    .about-features {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-top: 2rem;
    }
    
    .feature-item {
      padding: 1.25rem;
    }
    
    .feature-icon {
      font-size: 2.5rem;
    }
  }
  
  @media (max-width: 576px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .hero .lead {
      font-size: 1rem;
    }
    
    .hero-btn {
      font-size: 0.9rem;
      padding: 0.75rem 1.5rem;
    }
    
    .about-content {
      padding: 1.5rem 1rem;
    }
    
    .about .section-title {
      font-size: 1.75rem;
    }
    
    .about .lead {
      font-size: 1rem;
    }
  }
</style>

