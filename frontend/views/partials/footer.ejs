<% title = 'Contact Us' %>

<section id="contact" class="contact-section py-5">
  <div class="container">
    <!-- Header -->
    <div class="contact-header text-center mb-5">
      <h2 class="section-title"
          data-en="Get in Touch"
          data-hi="संपर्क करें">Get in Touch</h2>
      <div class="title-underline"></div>
      <p class="lead"
         data-en="We'd love to hear from you. Send us a message and we'll respond as soon as possible."
         data-hi="हमें आपसे सुनकर खुशी होगी। हमें संदेश भेजें और हम जल्द ही जवाब देंगे।">
        We'd love to hear from you. Send us a message and we'll respond as soon as possible.
      </p>
    </div>

    <div class="row g-4 justify-content-center">
      <!-- Contact Information Card -->
      <div class="col-lg-5 col-md-6">
        <div class="contact-info-card">
          <h4 class="contact-card-title"
              data-en="Contact Information"
              data-hi="संपर्क जानकारी">Contact Information</h4>
          
          <div class="contact-info-list">
            <!-- Address -->
<div class="contact-info-item">
  <div class="contact-icon">
    <i class="fas fa-map-marker-alt"></i>
  </div>
  <div class="contact-details">
    <div class="contact-label" data-en="Address" data-hi="पता">Address</div>
    <div class="contact-value">
      <% if (typeof currentShop !== 'undefined' && currentShop && currentShop.location) { %>
        <% const addressParts = []; %>
        <% if (currentShop.location.address) addressParts.push(currentShop.location.address); %>
        <% if (currentShop.location.city) addressParts.push(currentShop.location.city); %>
        <% if (currentShop.location.state) addressParts.push(currentShop.location.state); %>
        <% if (currentShop.location.pincode) addressParts.push('India - ' + currentShop.location.pincode); %>
        
        <% if (addressParts.length > 0) { %>
          <%- addressParts.join('<br>') %>
        <% } else { %>
          123, Royal Jewels Street<br>Jewelry District, Mumbai, India - 400001
        <% } %>
      <% } else { %>
        123, Royal Jewels Street<br>Jewelry District, Mumbai, India - 400001
      <% } %>
    </div>
  </div>
</div>


            <!-- Phone -->
            <div class="contact-info-item">
              <div class="contact-icon">
                <i class="fas fa-phone"></i>
              </div>
              <div class="contact-details">
                <div class="contact-label" data-en="Phone" data-hi="फ़ोन">Phone</div>
                <div class="contact-value">
                  <% if (typeof currentShop !== 'undefined' && currentShop && currentShop.contactInfo && currentShop.contactInfo.phone) { %>
                    <%= currentShop.contactInfo.phone %>
                  <% } else { %>
                    +91 98765 43210
                  <% } %>
                </div>
              </div>
            </div>

            <!-- Email -->
            <div class="contact-info-item">
              <div class="contact-icon">
                <i class="fas fa-envelope"></i>
              </div>
              <div class="contact-details">
                <div class="contact-label" data-en="Email" data-hi="ईमेल">Email</div>
                <div class="contact-value">
                  <% if (typeof currentShop !== 'undefined' && currentShop) { %>
                    <% if (currentShop.contactInfo && currentShop.contactInfo.email) { %>
                      <%= currentShop.contactInfo.email %>
                    <% } else if (currentShop.email) { %>
                      <%= currentShop.email %>
                    <% } else { %>
                      support@royaljewels.com
                    <% } %>
                  <% } else { %>
                    support@royaljewels.com
                  <% } %>
                </div>
              </div>
            </div>

            <!-- Website -->
            <div class="contact-info-item">
              <div class="contact-icon">
                <i class="fas fa-globe"></i>
              </div>
              <div class="contact-details">
                <div class="contact-label" data-en="Website" data-hi="वेबसाइट">Website</div>
                <div class="contact-value">
                  <% if (typeof currentShop !== 'undefined' && currentShop && currentShop.contactInfo && currentShop.contactInfo.website) { %>
                    <%= currentShop.contactInfo.website %>
                  <% } else { %>
                    www.royaljewels.com
                  <% } %>
                </div>
              </div>
            </div>

            <!-- Business Hours -->
            <div class="contact-info-item">
              <div class="contact-icon">
                <i class="fas fa-clock"></i>
              </div>
              <div class="contact-details">
                <div class="contact-label" data-en="Business Hours" data-hi="व्यवसाय का समय">Business Hours</div>
                <div class="contact-value">
                  <% if (typeof currentShop !== 'undefined' && currentShop && currentShop.businessHours) { %>
                    <% if (currentShop.businessHours.weekdays) { %>
                      <%= currentShop.businessHours.weekdays %><br>
                    <% } %>
                    <% if (currentShop.businessHours.sunday) { %>
                      <%= currentShop.businessHours.sunday %>
                    <% } %>
                  <% } else { %>
                    Mon - Sat: 10:00 AM - 8:00 PM | Sunday: 11:00<br>AM - 6:00 PM
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form Card -->
      <div class="col-lg-6 col-md-6">
        <div class="contact-form-card">
          <h4 class="contact-card-title"
              data-en="Send Us a Message"
              data-hi="हमें संदेश भेजें">Send Us a Message</h4>
          
          <form id="contactForm" class="contact-form">
            <div class="row g-3">
              <div class="col-md-6">
                <label for="firstName" class="form-label">
                  <span data-en="First Name *" data-hi="पहला नाम *">First Name *</span>
                </label>
                <input type="text" class="form-control" id="firstName" name="firstName" required>
              </div>
              <div class="col-md-6">
                <label for="lastName" class="form-label">
                  <span data-en="Last Name *" data-hi="अंतिम नाम *">Last Name *</span>
                </label>
                <input type="text" class="form-control" id="lastName" name="lastName" required>
              </div>
            </div>
            
            <div class="form-group">
              <label for="email" class="form-label">
                <span data-en="Email Address *" data-hi="ईमेल पता *">Email Address *</span>
              </label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            
            <div class="form-group">
              <label for="phone" class="form-label">
                <span data-en="Phone Number" data-hi="फ़ोन नंबर">Phone Number</span>
              </label>
              <input type="tel" class="form-control" id="phone" name="phone" placeholder="+91 98765 43210">
            </div>
            
            <div class="form-group">
              <label for="subject" class="form-label">
                <span data-en="Subject *" data-hi="विषय *">Subject *</span>
              </label>
              <select class="form-control" id="subject" name="subject" required>
                <option value="">Select a subject</option>
                <option value="inquiry" data-en="General Inquiry" data-hi="सामान्य पूछताछ">General Inquiry</option>
                <option value="custom-order" data-en="Custom Order" data-hi="विशेष ऑर्डर">Custom Order</option>
                <option value="repair" data-en="Jewelry Repair" data-hi="आभूषण मरम्मत">Jewelry Repair</option>
                <option value="pricing" data-en="Pricing Information" data-hi="मूल्य जानकारी">Pricing Information</option>
                <option value="feedback" data-en="Feedback" data-hi="प्रतिक्रिया">Feedback</option>
                <option value="other" data-en="Other" data-hi="अन्य">Other</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message" class="form-label">
                <span data-en="Your Message *" data-hi="आपका संदेश *">Your Message *</span>
              </label>
              <textarea class="form-control" id="message" name="message" rows="6" 
                        placeholder="Tell us about your requirements, questions, or how we can help you..." required></textarea>
            </div>
            
            <div class="form-submit">
              <button type="submit" class="btn-send-message">
                <i class="fas fa-paper-plane"></i>
                <span data-en="SEND MESSAGE" data-hi="संदेश भेजें">SEND MESSAGE</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

