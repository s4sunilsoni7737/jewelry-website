  }
  
  .search-input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }
  
  .search-input:focus {
    background-color: rgba(255, 255, 255, 0.2);
    border-color: #e0bf50;
    box-shadow: 0 0 0 0.2rem rgba(224, 191, 80, 0.25);
    color: #ffffff;
  }
  
  .search-btn {
     width: 36px;
  height: 36px;
  right: 4px;
    position: absolute;
    right: 0.25rem;
    top: 50%;
    transform: translateY(-50%);
