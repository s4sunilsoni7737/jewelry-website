    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%23e0bf50' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
  }
  
  /* Search Bar Styles */

  .search-container form {
  margin: 0;               /* remove default form spacing */
  display: flex;
  align-items: center;     /* vertically center input + button */
}
.search-container {
