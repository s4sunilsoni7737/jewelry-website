    <script>
    // Set Hindi as default language if not set
    (function() {
      try {
        if (!localStorage.getItem('language')) {
          localStorage.setItem('language', 'hi');
          document.documentElement.lang = 'hi';
        } else {
          const lang = localStorage.getItem('language');
          document.documentElement.lang = lang;
          if (lang === 'hi') applyHindiTranslations();
        }
        
        function applyHindiTranslations() {
          document.querySelectorAll('[data-hi]').forEach(el => {
            const text = el.getAttribute('data-hi');
            if (text) {
              el.textContent = text;
              el.classList.add('hindi');
            }
          });
        }
        
        window.applyHindiTranslations = applyHindiTranslations;
      } catch (e) {
        console.error('Language initialization error:', e);
      }
    })();
    </script>
